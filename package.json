{
  "name": "zoom.ts",
  "version": "1.0.0",
  "description": "A lightweight TypeScript library for image and video zooming, as seen on Medium.",
  "keywords": [
    "zoom.ts",
    "zoom.js",
    "image",
    "zoom",
    "zooming",
    "medium"
  ],
  "homepage": "https://michael-bull.com/projects/zoom.ts",
  "bugs": {
    "url": "https://github.com/MikeBull94/zoom.ts/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Michael Bull",
    "url": "https://michael-bull.com"
  },
  "contributors": [
    {
      "name": "Jacob Thornton",
      "email": "jacobthornton@gmail.com",
      "url": "https://twitter.com/fat"
    },
    {
      "name": "Sahil Bajaj",
      "email": "sahil29@gmail.com",
      "url": "http://sahil.me"
    },
    {
      "name": "Andrea Cognini",
      "email": "info@heavybeard.it",
      "url": "http://heavybeard.it"
    }
  ],
  "main": "dist/zoom.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikeBull94/zoom.ts"
  },
  "scripts": {
    "lint-ts": "tslint src/script/**/*.ts",
    "lint-scss": "sass-lint --config .sass-lint.yml \"src/style/**/*.scss\" --verbose --no-exit",
    "compile-ts": "browserify src/script/index.ts --plugin tsify > dist/zoom.js",
    "compile-scss": "node-sass src/style/index.scss dist/zoom.css",
    "optimize-ts": "browserify dist/zoom.js --debug --plugin [minifyify --no-map] > dist/zoom.min.js",
    "optimize-scss": "postcss --use cssnano --no-cssnano.autoprefixer --output dist/zoom.min.css dist/zoom.css",
    "watch-ts": "nodemon --ext ts --watch src/script --exec \"npm run compile-ts && npm run optimize-ts\"",
    "watch-scss": "nodemon --ext scss --watch src/style --exec \"npm run compile-scss && npm run optimize-scss\"",
    "docs-ts": "typedoc src/script --includeDeclarations --mode file --target ES5 --readme none --out docs/",
    "clean": "rm -rf dist/* && rm -rf docs/*",
    "watch": "concurrently --kill-others \"npm run watch-ts\" \"npm run watch-scss\"",
    "build": "npm run clean && npm run lint-ts && npm run lint-scss && npm run compile-ts && npm run optimize-ts && npm run compile-scss && npm run optimize-scss && npm run docs-ts"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.1.0",
    "concurrently": "^2.2.0",
    "cssnano": "^3.7.4",
    "minifyify": "^7.3.3",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-check-updates": "^2.8.0",
    "postcss-cli": "^2.5.2",
    "sass-lint": "^1.8.2",
    "tsify": "^1.0.3",
    "tslint": "^3.14.0",
    "typedoc": "^0.4.5",
    "typescript": "^1.8.10"
  }
}
